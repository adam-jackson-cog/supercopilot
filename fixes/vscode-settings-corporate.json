{
  "// Corporate VS Code Settings for GitHub Copilot Integration": "",
  "// This file contains recommended settings for corporate environments": "",
  
  "// GitHub Copilot Settings": "",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  "github.copilot.advanced": {
    "secret_key": "default-secret-key",
    "length": 500
  },
  "github.copilot.chat.enabled": true,
  "github.copilot.chat.welcomeMessage": "never",
  
  "// Terminal Integration Settings": "",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.showWelcome": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.shellIntegration.history": 100,
  
  "// Terminal Font Settings": "",
  "terminal.integrated.fontFamily": "MesloLGS NF, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,
  
  "// Network and Proxy Settings": "",
  "// NOTE: Replace with your actual proxy settings": "",
  "http.proxy": "",
  "http.proxyStrictSSL": false,
  "http.proxySupport": "on",
  "http.proxyAuthorization": null,
  
  "// Certificate Settings": "",
  "http.systemCertificates": true,
  
  "// Git Integration": "",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.defaultCloneDirectory": "~/Documents/Code",
  
  "// Extension Settings": "",
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  "extensions.ignoreRecommendations": false,
  
  "// Security Settings": "",
  "security.workspace.trust.untrustedFiles": "prompt",
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.startupPrompt": "once",
  
  "// Editor Settings": "",
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.suggest.preview": true,
  "editor.suggest.showInlineDetails": true,
  
  "// Telemetry Settings (Corporate Policy)": "",
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "dotnetAcquisitionExtension.enableTelemetry": false,
  
  "// Copilot Specific Editor Settings": "",
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.suggest.insertMode": "insert",
  "editor.suggestOnTriggerCharacters": true,
  
  "// File Associations": "",
  "files.associations": {
    "*.json": "jsonc",
    "*.env": "plaintext",
    "*.env.*": "plaintext"
  },
  
  "// Workspace Settings": "",
  "workbench.startupEditor": "readme",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  
  "// Update Settings": "",
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  
  "// Language Specific Settings": "",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  
  "// Corporate Specific Settings": "",
  "// Add your organization's specific settings here": "",
  
  "// Development Settings": "",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "auto",
  "debug.openDebug": "openOnDebugBreak",
  
  "// Problem Matcher Settings": "",
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  
  "// Search Settings": "",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true
  },
  
  "// File Watcher Settings": "",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  
  "// Auto Save Settings": "",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  "// Integrated Terminal Settings": "",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-l"]
    },
    "zsh": {
      "path": "/bin/zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  
  "// Window Settings": "",
  "window.restoreWindows": "folders",
  "window.newWindowDimensions": "inherit",
  "window.closeWhenEmpty": false,
  
  "// Copilot Chat Settings": "",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.scopeSelection": true,
  
  "// Performance Settings": "",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  
  "// Breadcrumb Settings": "",
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showSymbols": true,
  
  "// Minimap Settings": "",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.minimap.showSlider": "always",
  
  "// Suggestion Settings": "",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestSelection": "first",
  
  "// Error Lens Settings (if installed)": "",
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.fontSize": "12px",
  
  "// GitLens Settings (if installed)": "",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true,
    "suppressCommitNotFoundWarning": true,
    "suppressFileNotUnderSourceControlWarning": true,
    "suppressGitVersionWarning": true,
    "suppressLineUncommittedWarning": true,
    "suppressNoRepositoryWarning": true
  },
  
  "// Prettier Settings (if installed)": "",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,
  
  "// ESLint Settings (if installed)": "",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  
  "// Python Settings (if installed)": "",
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  
  "// Final Note": "",
  "// Remember to restart VS Code after applying these settings": ""
}